def do_extend_both_right(winnow: SlidingMap, query_hash: Index, query_start:int,  query_end:int,  query_winnow_start:int,  query_winnow_end:int,ref_hash: Index,  ref_start:int,  ref_end:int,  ref_winnow_start:int,  ref_winnow_end:int, same_genome:bool)-> bool:
    if (ref_winnow_end >= len(ref_hash.minimizers) or query_winnow_end >= len(query_hash.minimizers)):
